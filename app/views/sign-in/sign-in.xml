<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="loaded">
  <StackLayout orientation="vertical">
    <StackLayout orientation="vertical" class="logo">
      <Label text="&#xf100;" class="image" />
      <Label text="Save the Princess" class="h1" />
    </StackLayout>
    <StackLayout orientation="vertical" class="form">
      <TextField hint="Username" id="username" class="form-control" text="{{ username }}" autocorrect="false" autocapitalizationType="none" />
      <TextField hint="Password" id="password" class="form-control" text="{{ password }}" secure="true" />
      <Button text="Sign in" tap="signIn" class="btn" />
      <Button text="Create an account" tap="signUp" class="btn btn-link" />
    </StackLayout>
  </StackLayout>
</Page>
